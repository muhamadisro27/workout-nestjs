generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  username   String  @id @db.VarChar(100)
  first_name String  @db.VarChar(100)
  last_name  String? @db.VarChar(100)
  password   String  @db.VarChar(100)
  role       Role    @default(USER)

  @@map("users")
}

enum Role {
  ADMIN
  USER
}
